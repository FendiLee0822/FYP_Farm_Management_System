@model task_Creation_Model

@{
    ViewData["Title"] = "Task Update Page";
}

<div class="col-md-4">
    <div class="mb-3">
        <h2 class="text-primary">Task Update Page</h2>
        <hr />
    </div>

    <form asp-action="task_Update_Page_Employee" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Task.TaskId" />
        </div>
        <div class="form-group">
            <label asp-for="Task.TaskDescription" class="control-label">Task Description</label>
            <input asp-for="Task.TaskDescription" class="form-control" readonly />
            <span asp-validation-for="Task.TaskDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Task.TaskProject" />
        </div>
        <div class="form-group">
            <label asp-for="Task.TaskField" class="control-label">Field</label>
            <input asp-for="Task.TaskField" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Task.TaskPlant" class="control-label">Plant</label>
            <input asp-for="Task.TaskPlant" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Task.TaskStatus" class="control-label">Task Status</label>
            <select asp-for="Task.TaskStatus" class="form-control" required>
                <option value="">--Select Option--</option>
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Task.EmployeeIncharge" class="control-label">Employee Incharge</label>
            <input asp-for="Task.EmployeeIncharge" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Task.AdminAssigned" class="control-label">Admin Assigned</label>
            <input asp-for="Task.AdminAssigned" class="form-control" readonly />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Task.TaskCreateTime" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Task.TaskUpdateTime" />
        </div>
        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to update task?')">Update Task</button>
        <a asp-controller="Task" asp-action="task_Information_Page_Employee" class="btn btn-primary">Back To Tasks List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}