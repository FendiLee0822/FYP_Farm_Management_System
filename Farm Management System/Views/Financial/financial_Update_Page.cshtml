@model financial_Creation_Model

@{
    ViewData["Title"] = "Financial Update Page";
}

<div class="col-md-4">
    <div class="mb-3">
        <h2 class="text-primary">Financial Update Page</h2>
        <hr />
    </div>

    <form asp-action="financial_Update_Page" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Financials.TransactionName" class="control-label">Transaction Name</label>
            <input asp-for="Financials.TransactionName" class="form-control" required/>
            <span asp-validation-for="Financials.TransactionName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Financials.TransactionProject" class="control-label">Financial</label>
            <select asp-for="Financials.TransactionProject" class="form-control"
                    asp-items="@(new SelectList(Model.Projects, "ProjectId", "ProjectName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Financials.IncomeAmount" class="control-label">Income Amount</label>
            <input asp-for="Financials.IncomeAmount" class="form-control" />
            <span asp-validation-for="Financials.IncomeAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Financials.ExpenseAmount" class="control-label">Expense Amount</label>
            <input asp-for="Financials.ExpenseAmount" class="form-control" />
            <span asp-validation-for="Financials.ExpenseAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Financials.AdminUpdate"></label>
            <select asp-for="Financials.AdminUpdate"
                    asp-items="@(new SelectList(Model.Admins, "AdminId", "AdminId"))"
                    class="form-control">
            </select>
        </div>
        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to update transaction?')">Update Transaction</button>
        <a asp-controller="Financial" asp-action="financial_Information_Page" class="btn btn-primary">Back To Transaction List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}