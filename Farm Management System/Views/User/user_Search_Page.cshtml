@model List<User>

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-controller="User" asp-action="user_Information_Page" class="btn btn-primary">Back to User List</a>
            <br />
        </div>
        <div class="col-6">
            <h2 class="text-primary">User Search Page</h2>
        </div>
        <div class="col-6 text-right">
            @using (Html.BeginForm("user_Search_Page", "User", FormMethod.Get))
            {
                <b>Search By:</b>
                @Html.RadioButton("SearchBy", "UserGender") <span>Gender</span>
                @Html.RadioButton("SearchBy", "UserRole") <span>Role</span>
                @Html.RadioButton("SearchBy", "UserFname") <span>First Name</span>
                @Html.RadioButton("SearchBy", "UserLname") <span>Last Name</span>
                <br />

                @Html.TextBox("search")<input type="submit" value="Search" />
            }
            <br />
            <br />
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:auto">
    <thead>
        <tr>
            <td>User ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Gender</td>
            <td>Date of Birth</td>
            <td>Account Password</td>
            <td>Role</td>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="95" style="color:red">
                    No user under this role...
                </td>
            </tr>
        }
        else
        {

            @foreach (var uz in Model ?? Enumerable.Empty<User>())
            {
                <tr>
                    <td>@uz.UserId</td>
                    <td>@uz.UserFname</td>
                    <td>@uz.UserLname</td>
                    <td>@uz.UserGender</td>
                    <td>@uz.UserDob</td>
                    <td>@uz.UserPwd</td>
                    <td>@uz.UserRole</td>
                </tr>
            }
        }
    </tbody>
</table>
