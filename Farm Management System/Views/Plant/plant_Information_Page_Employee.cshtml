@model List<Plant>

@{
    ViewData["Title"] = "Plant Information Page";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Plant Information Page</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Plant" asp-action="plant_Search_Page_Employee" class="btn btn-primary">Search Plant</a>
            <a asp-controller="Plant" asp-action="plant_Attribute_Selection_View_Employee" class="btn btn-primary">Create View</a>
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Plant ID</th>
            <th>Plant Name</th>
            <th>Plant Bug Time</th>
            <th>Plant Flowering Time</th>
            <th>Plant Set Time</th>
            <th>Plant Growth Time</th>
            <th>Plant Ripening Time</th>
            <th>Admin ID Update</th>
            <th>Latest Update Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="6">No row smatch search criteria</td>
            </tr>
        }
        @foreach (var uz in Model ?? Enumerable.Empty<Plant>())
        {
            <tr>
                <td>@uz.PlantId</td>
                <td>@uz.PlantName</td>
                <td>@uz.PlantBugTime</td>
                <td>@uz.PlantFloweringTime</td>
                <td>@uz.PlantSetTime</td>
                <td>@uz.PlantGrowthTime</td>
                <td>@uz.PlantRipeningTime</td>
                <td>@uz.AdminUpdate</td>
                <td>@uz.PlantUpdateTime</td>
            </tr>
        }
    </tbody>
</table>