@model Farm_Management_System.farm_Management_SystemModel.Plant

@{
    ViewData["Title"] = "Plant Detail Page";
}

<div class="col-md-6">
    <div class="mb-3">
        <h2 class="text-primary">Plant Detail Page</h2>
        <hr />
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-6">Plant Name</dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantName)
            </dd>
            <dt class="col-sm-6">
                Plant Bug Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantBugTime)
            </dd>
            <dt class="col-sm-6">
                Plant Flowering Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantFloweringTime)
            </dd>
            <dt class="col-sm-6">
                Plant Set Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantSetTime)
            </dd>
            <dt class="col-sm-6">
                Plant Growth Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantGrowthTime)
            </dd>
            <dt class="col-sm-6">
                Plant Ripening Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantRipeningTime)
            </dd>
            <dt class="col-sm-6">
                Admin ID Update
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.AdminUpdate)
            </dd>
            <dt class="col-sm-6">
                Plant Update Time
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlantUpdateTime)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="plant_Update_Page" asp-route-id="@Model.PlantId" class="btn btn-primary">Edit</a>
        <a asp-action="plant_Information_Page" class="btn btn-primary">Back to Plant List</a>
    </div>
</div>

