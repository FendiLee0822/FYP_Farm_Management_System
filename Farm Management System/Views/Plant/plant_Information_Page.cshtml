@model List<Plant>

@{
    ViewData["Title"] = "Plant Information Page";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Plant Information Page</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Plant" asp-action="plant_Create_Page" class="btn btn-primary">Create Plant</a>
            <a asp-controller="Plant" asp-action="plant_Import_Page" class="btn btn-primary">Import Plant</a>
            <a asp-controller="Plant" asp-action="plant_Search_Page" class="btn btn-primary">Search Plant</a>
            <a asp-controller="Plant" asp-action="plant_Attribute_Selection_View" class="btn btn-primary">Create View</a>
            <hr />
            <div>
                @using (Html.BeginForm("export_Plant_CSV", "Plant", FormMethod.Post))
                {
                    <input type="submit" id="btnSubmit" value="Export_Plant_CSV" class="btn btn-primary" />
                }
            </div>
            <hr />
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Plant ID</th>
            <th>Plant Name</th>
            <th>Plant Bug Time</th>
            <th>Plant Flowering Time</th>
            <th>Plant Set Time</th>
            <th>Plant Growth Time</th>
            <th>Plant Ripening Time</th>
            <th>Admin ID Update</th>
            <th>Latest Update Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="6">No row smatch search criteria</td>
            </tr>
        }
        @foreach (var uz in Model ?? Enumerable.Empty<Plant>())
        {
            <tr>
                <td>@uz.PlantId</td>
                <td>@uz.PlantName</td>
                <td>@uz.PlantBugTime</td>
                <td>@uz.PlantFloweringTime</td>
                <td>@uz.PlantSetTime</td>
                <td>@uz.PlantGrowthTime</td>
                <td>@uz.PlantRipeningTime</td>
                <td>@uz.AdminUpdate</td>
                <td>@uz.PlantUpdateTime</td>
                <td><a value="Details" class="btn btn-primary" style="width:90px" asp-controller="Plant" asp-action="plant_Detail_Page" asp-route-id="@uz.PlantId"><i class="bi bi-info-circle"></i>Details</a></td>
                <td><a value="Edit" class="btn btn-warning" style="width:90px" asp-controller="Plant" asp-action="plant_Update_Page" asp-route-id="@uz.PlantId"><i class="bi bi-pencil-square"></i>Edit</a></td>
                <td><a value="Delete" class="btn btn-danger" style="width:90px" asp-controller="Plant" asp-action="plant_Delete_Page" asp-route-id="@uz.PlantId"><i class="bi bi-trash"></i>Delete</a></td>
            </tr>
        }
    </tbody>
</table>