@model List<Plant>


<a asp-controller="Plant" asp-action="plant_Information_Page" class="btn btn-primary">Back to Plant List</a>
<hr />
<form asp-controller="Plant" asp-action="plant_Import_Page" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <hr />
    <button type="submit">Upload</button>
</form>

@if (Model.Count() > 0)
{
    <hr />
    <h2 class="text-primary">Imported Plant List</h2>
    <table class="table-bordered table-striped" style="width:auto">
        <tr>
            <th>Plant ID</th>
            <th>Plant Name</th>
            <th>Plant Bug Time</th>
            <th>Plant Flowering Time</th>
            <th>Plant Set Time</th>
            <th>Plant Growth Time</th>
            <th>Plant Ripening Time</th>
            <th>Admin ID Update</th>
            <th>Latest Update Time</th>
        </tr>
        <tbody>
            @foreach (var uz in Model)
            {
            <tr>
                <td>@uz.PlantId</td>
                <td>@uz.PlantName</td>
                <td>@uz.PlantBugTime</td>
                <td>@uz.PlantFloweringTime</td>
                <td>@uz.PlantSetTime</td>
                <td>@uz.PlantGrowthTime</td>
                <td>@uz.PlantRipeningTime</td>
                <td>@uz.AdminUpdate</td>
                <td>@uz.PlantUpdateTime</td>
            </tr>
            }
        </tbody>
    </table>
}