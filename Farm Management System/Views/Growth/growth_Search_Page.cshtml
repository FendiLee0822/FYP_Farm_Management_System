@model List<Growth>

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-controller="Growth" asp-action="growth_Information_Page" class="btn btn-primary">Back to Growth List</a>
            <br />
        </div>
        <div class="col-6">
            <h2 class="text-primary">Growth Search Page</h2>
        </div>
        <div class="col-6 text-right">
            @using (Html.BeginForm("growth_Search_Page", "Growth", FormMethod.Get))
            {
                <b>Search By:</b>
                @Html.RadioButton("SearchBy", "GrowthProject") <span>GrowthProject</span>
                @Html.RadioButton("SearchBy", "GrowthPlant") <span>GrowthPlant</span>
                @Html.RadioButton("SearchBy", "GrowthField") <span>GrowthField</span>
                <br />
                @Html.RadioButton("SearchBy", "GrowthStatus") <span>GrowthStatus</span>
                <br />
                @Html.TextBox("search")<input type="submit" value="Search" />
            }
            <br />
            <br />
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:auto">
    <thead>
        <tr>
            <td>Growth Id</td>
            <td>Growth Project</td>
            <td>Plant</td>
            <td>Field</td>
            <td>Growth Status</td>
            <td>User Update</td>
            <td>Latest Update Time</td>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="95" style="color:red">
                    No user under this role...
                </td>
            </tr>
        }
        else
        {

            @foreach (var uz in Model ?? Enumerable.Empty<Growth>())
            {
                <tr>
                    <td>@uz.GrowthId</td>
                    <td>@uz.GrowthProject</td>
                    <td>@uz.GrowthPlant</td>
                    <td>@uz.GrowthField</td>
                    <td>@uz.GrowthStatus</td>
                    <td>@uz.UserUpdate</td>
                    <td>@uz.GrowthUpdateTime</td>
                </tr>
            }
        }
    </tbody>
</table>
