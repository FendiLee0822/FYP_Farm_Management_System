@model Farm_Management_System.Models.growth_Creation_Model

@{
    ViewData["Title"] = "Growth Update Page";
}

<div class="col-md-4">
    <div class="mb-3">
        <h2 class="text-primary">Growth Update Page</h2>
        <hr />
    </div>

    <form asp-action="growth_Update_Page" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Growth.GrowthId" />
        </div>
        <div class="form-group">
            <label asp-for="Growth.GrowthProject" class="control-label">Project</label>
            <select asp-for="Growth.GrowthProject" class="form-control"
                    asp-items="@(new SelectList(Model.Projects, "ProjectId", "ProjectName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Growth.GrowthPlant" class="control-label">Plant</label>
            <select asp-for="Growth.GrowthPlant" class="form-control"
                    asp-items="@(new SelectList(Model.Plants, "PlantId", "PlantName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Growth.GrowthField" class="control-label">Field</label>
            <select asp-for="Growth.GrowthField" class="form-control"
                    asp-items="@(new SelectList(Model.Fields, "FieldId", "FieldName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Growth.GrowthStatus" class="control-label">Growth Status</label>
            <select asp-for="Growth.GrowthStatus" class="form-control">
                <option value="--Select Option--">--Select Option--</option>
                <option value="Flowering">Flowering</option>
                <option value="Maturation">Maturation</option>
                <option value="Ripening">Ripening</option>
                <option value="Harvesting">Harvesting</option>
            </select>
            <span asp-validation-for="Growth.GrowthStatus" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Growth.UserUpdate" class="control-label">User Update</label>
            <select asp-for="Growth.UserUpdate" class="form-control"
                    asp-items="@(new SelectList(Model.Users, "UserId", "UserId"))">
            </select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Growth.GrowthUpdateTime" />
        </div>
        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to update growth?')">Save Growth</button>
        <a asp-controller="Growth" asp-action="growth_Information_Page" class="btn btn-primary">Back To Growths List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
