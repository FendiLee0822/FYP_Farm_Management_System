@model List<Growth>

@{
    ViewData["Title"] = "Growth Information Page";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Growth Information Page</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Growth" asp-action="growth_Create_Page" class="btn btn-primary">Create Growth</a>
            <a asp-controller="Growth" asp-action="growth_Search_Page" class="btn btn-primary">Search Growth</a>
            <a asp-controller="Growth" asp-action="growth_Attribute_Selection_View" class="btn btn-primary">Create View</a>
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Growth Id</th>
            <th>Project</th>
            <th>Plant</th>
            <th>Field</th>
            <th>Growth Status</th>
            <th>User Update</th>
            <th>Latest Update Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="6">No row smatch search criteria</td>
            </tr>
        }
        @foreach (var uz in Model ?? Enumerable.Empty<Growth>())
        {
    <tr>
        <td>@uz.GrowthId</td>
        <td>@uz.GrowthProject</td>
        <td>@uz.GrowthPlant</td>
        <td>@uz.GrowthField</td>
        <td>@uz.GrowthStatus</td>
        <td>@uz.UserUpdate</td>
        <td>@uz.GrowthUpdateTime</td>
        <td><a value="Details" class="btn btn-primary" style="width:90px" asp-controller="Growth" asp-action="growth_Detail_Page" asp-route-id="@uz.GrowthId"><i class="bi bi-info-circle"></i>Details</a></td>
        <td><a value="Edit" class="btn btn-warning" style="width:90px" asp-controller="Growth" asp-action="growth_Update_Page" asp-route-id="@uz.GrowthId"><i class="bi bi-pencil-square"></i>Edit</a></td>
        <td><a value="Delete" class="btn btn-danger" style="width:90px" asp-controller="Growth" asp-action="growth_Delete_Page" asp-route-id="@uz.GrowthId"><i class="bi bi-trash"></i>Delete</a></td>
    </tr>
        }
    </tbody>
</table>