@model Farm_Management_System.Models.inventory_User_Model

@{
    ViewData["Title"] = "Inventory Create Page";
}

<div class="col-md-4">
    <div class="mb-3">
        <h2 class="text-primary">Inventory Create Page</h2>
        <hr />
    </div>

    <form asp-action="inventory_Create_Page" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Inventory.InventoryName" class="control-label">Inventory Name</label>
            <input asp-for="Inventory.InventoryName" class="form-control" required/>
            <span asp-validation-for="Inventory.InventoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Inventory.InventoryAmount" class="control-label">Inventory Amount</label>
            <input asp-for="Inventory.InventoryAmount" class="form-control" />
            <span asp-validation-for="Inventory.InventoryAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Inventory.UserUpdate"></label>
            <select asp-for="Inventory.UserUpdate"
                    asp-items="@(new SelectList(Model.Users, "UserId", "UserId"))"
                    class="form-control">
            </select>
        </div>
        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to add inventory?')">Add Inventory</button>
        <a asp-controller="Inventory" asp-action="inventory_Information_Page" class="btn btn-primary">Back To Inventory List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
