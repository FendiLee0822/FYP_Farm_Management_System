@model List<Inventory>

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-controller="Inventory" asp-action="inventory_Information_Page" class="btn btn-primary">Back to Inventory List</a>
            <br />
        </div>
        <div class="col-6">
            <h2 class="text-primary">Inventory Search Page</h2>
        </div>
        <div class="col-6 text-right">
            @using (Html.BeginForm("inventory_Search_Page", "Inventory", FormMethod.Get))
            {
                <b>Search By Inventory Name:</b>
                <br />
                @Html.TextBox("search")<input type="submit" value="Search" />
            }
            <br />
            <br />
        </div>
    </div>
</div>

<table class="table-bordered table-striped" style="width:auto">
    <thead>
        <tr>
            <td>Inventory Id</td>
            <td>Inventory Name</td>
            <td>Inventory Amount</td>
            <td>User Update</td>
            <td>Inventory Update Time</td>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="95" style="color:red">
                    No inventory under this role...
                </td>
            </tr>
        }
        else
        {

            @foreach (var uz in Model ?? Enumerable.Empty<Inventory>())
            {
                <tr>
                    <td>@uz.InventoryId</td>
                    <td>@uz.InventoryName</td>
                    <td>@uz.InventoryAmount</td>
                    <td>@uz.UserUpdate</td>
                    <td>@uz.InventoryUpdateTime</td>
                </tr>
            }
        }
    </tbody>
</table>
